{
    "name": "fleetbase/storefront-api",
    "version": "1.0.0-dev",
    "description": "FleetOps TMS and Last-Mile Operations System",
    "keywords": ["fleetops", "last-mile", "tms", "delivery management"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald A. Richardson",
            "email": "ron@fleetbase.io"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "fleetbase/core-api": "*",
        "fleetbase/fleetops-api": "*",
        "geocoder-php/google-maps-places-provider": "^1.4",
        "milon/barcode": "^9.0",
        "php-http/guzzle7-adapter": "^1.0",
        "psr/http-factory-implementation": "*",
        "toin0u/geocoder-laravel": "^4.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16.4",
        "pestphp/pest": "^0.3.8",
        "phpstan/phpstan": "^0.12.48",
        "symfony/var-dumper": "^5.2.0"
    },
    "autoload": {
        "psr-4": {
            "Fleetbase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fleetbase\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../core-api"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Fleetbase\\Providers\\FleetOpsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=0",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
